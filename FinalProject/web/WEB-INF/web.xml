<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBookListServlet</servlet-name>
        <servlet-class>servlet.GetBookListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <servlet-class>servlet.shoppingCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>singleBookServlet</servlet-name>
        <servlet-class>servlet.singleBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productInfor</servlet-name>
        <servlet-class>servlet.productInfor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProduct</servlet-name>
        <servlet-class>servlet.deleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProduction</servlet-name>
        <servlet-class>servlet.updateProduction</servlet-class>
    </servlet>        
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBookListServlet</servlet-name>
        <url-pattern>/GetBookListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shoppingCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>singleBookServlet</servlet-name>
        <url-pattern>/singleBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productInfor</servlet-name>
        <url-pattern>/productInfor</url-pattern>
    </servlet-mapping> 
    <servlet-mapping>
        <servlet-name>deleteProduct</servlet-name>
        <url-pattern>/deleteProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProduction</servlet-name>
        <url-pattern>/updateProduction</url-pattern>
    </servlet-mapping>           
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
